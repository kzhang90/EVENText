<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h2>Add Your bookmark as a reminder</h2>

      <%= simple_form_for @reminder, :url => user_reminders_path(current_user), :method => :post do |f| %>
        <%= f.input :title, input_html: { value: @bookmark["title"] } %>
        <%= f.input :time, input_html: { value: @bookmark["time"] } %>
        <%= f.input :phone_number, input_html: { value: current_user.phone_number || 'Please enter your phone number' } %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>