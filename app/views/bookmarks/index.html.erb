<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h2 class="text-center"><%= current_user.first_name %>'s Bookmarks</h2>
                <% @bookmarks.each do |bookmark| %>
                <div class="bookmarkDiv">
                    <% if bookmark.image.empty? %>
                        <%= image_tag("no-image.jpg") %>
                    <% else %>
                        <img src="<%= bookmark.image %>">
                    <% end %>
                    <div class="bookmarkSpec">
                        <div class="bookmarkTitle"><%= bookmark.title %></div>                        
                        <div class="bookmarkDT"><%= bookmark.time.to_time.strftime('%A, %B %d at %I %p') %></div>
                        <div class="bookmarkLoc"><%= bookmark.location %></div>
                        <div class="bookmarkDesc"><%= (bookmark.description).match(/^.*?[\.!\?](?:|$)/).to_s %></div>
                        <div class="bookmarkUrl"><%= link_to "Event Page", bookmark.url %></div>
                        <div class="bookmarkLinks"><%= link_to "Edit", [:edit, bookmark], class: " btn btn-default" %>
                        <%= link_to "Delete", bookmark, :method=>"delete", data: { confirm: 'Are you sure you want to delete this alert?' }, class: "btn btn-default" %>
                        <%= link_to "Set Reminder", bookmark_path(bookmark.id), class: "btn btn-primary" %></div>
                    </div>
                </div>
                <% end %>
                <%= link_to "Back", :back, :class => "btn btn-primary pull-left"%>
                <%= link_to "Find Events", root_path, :class => 'btn btn-primary pull-right'%>
        </div>
    </div>
</div>