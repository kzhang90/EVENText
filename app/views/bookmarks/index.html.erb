<div class="container-fluid">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
            <h2 class="text-center"><%= current_user.first_name %>'s Bookmarks</h2>
                <% @bookmarks.each do |bookmark| %>
                <div class="bookmarkDiv">
                    <div class="bookmark title"><%= bookmark.title %></div>
                    <% if bookmark.image.empty? %>
                        <div class="bookmark image"><%= image_tag("no-image.jpg") %></div>
                    <% else %>
                        <div class="bookmark image"><img src="<%= bookmark.image %>"></div>
                    <% end %>
                    <div class="bookmark description"><%= bookmark.description %></div>
                    <div class="bookmark location"><%= bookmark.location %></div>
                    <div class="bookmark time"><%= bookmark.time %></div>
                    <div class="bookmark created"><%= bookmark.created_at %></div>
                    <div class="bookmark updated"><%= bookmark.updated_at %></div>
                    <div class="bookmark url"><%= bookmark.url %></div>
                    <div class="bookmark edit"><%= link_to "Edit", [:edit, bookmark]%></div>
                    <div class="bookmark delete"><%= link_to "Delete", bookmark, method: :delete, data: { confirm: 'Are you sure you want to delete this alert?' }%></div>
                    <div class="bookmark reminder"><%= link_to "Add bookmark to reminders?", bookmark_path(bookmark.id) %></div>
                </div>
                <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
        <h2 class="text-center">Add a bookmark below:</h2>

            <div id="post-new-bookmark">
                <%= simple_form_for [current_user, @bookmark], :method => :post, remote: true do |f| %>
                    <% if @bookmark.errors.any? %>
                     <div id="errorExplanation">
                      <h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this post from being saved:</h2>
                      <% end %>
                    <%= f.input :title %>
                    <%= f.input :url %>
                    <%= f.input :image %>
                    <%= f.input :description %>
                    <%= f.input :location %>
                    <%= f.input :time %>
                    <%= f.button :submit%>
                <% end %>
            </div>

        </div>
    </div>

</div>