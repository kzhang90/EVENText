<div class="container-fluid">
  

  <div class="row">


    <div class="col-xs-8">
      <p id="signup-title">This is EvenText.</p>
      <br>
      <p id="signup-description">A place to search for events and be reminded of them later.</p>
    </div>


    <div class="col-xs-4">

      <h3 class="text-center">Sign up here.</h3>
      <div class="signup-form">
        
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true, autofocus: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.button :submit, "Sign Up",class: "long-btn btn btn-default" %>
          <hr class="style-one">
          <div id="signed-up"><%= link_to "Already signed up?", new_session_path(resource_name), class: "btn btn-default" %></div>
        <% end %>
        
      </div>
      <div id="facebook">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign In with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-sm" %>
          <% end -%>
        <% end -%>
      </div>


    </div>
    <!-- col-xs-4 -->

  </div>
  <!-- row -->

</div>
<!-- container -->
