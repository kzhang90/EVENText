<div class="container-fluid">
<h3 class="text-center">Log In</h3>

<div class="row">
<div class="col-xs-6 col-xs-offset-3">
  <div id="signup-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :autocomplete => :off, :placeholer => "Enter",required: true, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log In" %>
        <%= render "devise/shared/links" %>
      </div>

    <% end %>
  </div>
  <div id="facebook">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Sign In with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "btn btn-primary btn-sm" %>
          <% end -%>
        <% end -%>
  </div>
</div>
</div>