<h1>Single Page App</h1>
<p>Home page after logging in</p>
<!-- new search, show clickable search results,  -->
<!-- single page app with search bar and results being displayed. -->
<!-- search form -->
<div id="search-form">
  <%= simple_form_for :search, remote: true, :url => search_apis_path, html: { method: :get, id: :search_me } do |f| %>
    <%= f.input :keyword, :placeholder => 'keyword', input_html: { name: :keyword } %>
    <%= f.input :city, :placeholder => 'city', input_html: { name: :city } %>
    <%= f.input :start_date, :placeholder => 'YYYY-MM-DD', input_html: { name: :start_date } %>
    <%= f.input :end_date, :placeholder => 'YYYY-MM-DD', input_html: { name: :end_date } %>
    <%= f.button :submit, "Submit" %>
  <% end %>
</div>

<!-- style this flash notice and use jquery to manipulate the background color-->
<div id="flash-notice"></div>

<!-- append to below, in some order, with some format, limit results to ~10 -->
<div id="api-results"></div>




