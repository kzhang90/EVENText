<%= simple_form_for ([@user, @reminder])} do |f| %>

  <% if @reminder.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@reminder.errors.count, "error") %> prohibited this reminder from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @reminder.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

    <%= f.input :name %>
    <%= f.input :phone_number %>
    <%= f.input :time %>
    <%= f.input :body %>
    <!-- Rails expects time_select when dealing with ActiveRecord forms -->
    <%= time_select :reminder, :time, {:class => "form-control" } %>
    <%= date_select :reminder, :time, {:class => "form-control" } %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, default: "Pacific Time (US & Canada)" %>
    <%= f.button :submit %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        reminders_path, :class => 'btn btn-default' %>
<% end %>